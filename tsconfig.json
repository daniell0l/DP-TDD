{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    //"rootDir": [ "src", "tests"],
    "target": "es2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "a/*": ["*"],
      "a/tests/*": ["../tests/*"]
    },
    "strict": true,
    //"rootDir": ["src", "tests"],

    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": ["src", "tests"]
}
